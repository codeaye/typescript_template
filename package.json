{
	"name": "typescript-template",
	"version": "0.0.6",
	"description": "Just a template",
	"main": "dist/index.js",
	"scripts": {
		"build": "rimraf dist && swc src -d dist",
		"watch": "swc src -d dist -w",
		"start": "node dist/index.js",
		"dev": "run-s build start",
		"watch:start": "tsc-watch --onSuccess \"node ./dist/index.js\"",
		"cm": "cz",
		"test": "jest",
		"lint:fix": "eslint 'src/**/*.ts' --fix",
		"lint:staged": "pretty-quick --staged && lint-staged --concurrent 4 --quiet",
		"precommit": "run-s test lint:staged",
		"push": "npm run build && git add . && npm run cm && git push",
		"release": "standard-version",
		"prepare": "husky install"
	},
	"keywords": [],
	"author": "TheHandyUser",
	"license": "ISC",
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		],
		"rules": {
			"subject-case": [
				2,
				"never",
				[
					"start-case",
					"pascal-case"
				]
			]
		}
	},
	"eslintConfig": {
		"ignorePatterns": [
			"dist/",
			"node_modules/"
		],
		"env": {
			"es2021": true,
			"node": true,
			"jest": true
		},
		"extends": [
			"airbnb-base",
			"plugin:import/errors",
			"plugin:import/warnings",
			"plugin:import/typescript",
			"prettier"
		],
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"ecmaVersion": "latest",
			"sourceType": "module"
		},
		"plugins": [
			"@typescript-eslint",
			"prettier"
		],
		"rules": {
			"import/extensions": [
				"error",
				"ignorePackages",
				{
					"js": "never",
					"ts": "never"
				}
			],
			"prettier/prettier": "warn"
		},
		"globals": {
			"jest": true
		}
	},
	"lint-staged": {
		"*.ts": "eslint --cache --fix"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"devDependencies": {
		"@commitlint/cli": "^16.2.4",
		"@commitlint/config-conventional": "^16.2.4",
		"@swc/cli": "^0.1.57",
		"@swc/core": "^1.2.183",
		"@types/jest": "^27.5.1",
		"@types/node": "^17.0.32",
		"@typescript-eslint/eslint-plugin": "^5.23.0",
		"@typescript-eslint/parser": "^5.23.0",
		"chokidar": "^3.5.3",
		"commitizen": "^4.2.4",
		"cz-conventional-changelog": "3.3.0",
		"eslint": "^7.32.0 || ^8.2.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-import": "^2.25.2",
		"eslint-plugin-prettier": "^4.0.0",
		"husky": "^8.0.0",
		"jest": "^28.1.0",
		"lint-staged": ">=10",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.6.2",
		"pretty-quick": "^3.1.3",
		"rimraf": "^3.0.2",
		"standard-version": "^9.3.2",
		"ts-jest": "^28.0.2",
		"typescript": "^4.6.4"
	}
}
