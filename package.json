{
	"name": "typescript-template",
	"version": "0.0.2",
	"description": "Just a template",
	"main": "index.js",
	"scripts": {
		"cm": "cz",
		"test": "jest",
		"lint:fix": "eslint 'src/**/*.ts' --fix",
		"lint:staged": "pretty-quick --staged && lint-staged --concurrent 4 --quiet",
		"precommit": "run-s test lint:staged",
		"push": "npm run build && git add . && npm run cm && git push",
		"release": "standard-version",
		"build": "tsc",
		"prepare": "husky install"
	},
	"keywords": [],
	"author": "TheHandyUser",
	"license": "ISC",
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		],
		"rules": {
			"subject-case": [
				2,
				"never",
				[
					"start-case",
					"pascal-case"
				]
			]
		}
	},
	"standard-version": {
		"types": [
			{
				"type": "chore",
				"section": "Others",
				"hidden": false
			},
			{
				"type": "revert",
				"section": "ðŸ”„ Reverts",
				"hidden": false
			},
			{
				"type": "feat",
				"section": "âœ¨ Features",
				"hidden": false
			},
			{
				"type": "fix",
				"section": "ðŸž Bug Fixes",
				"hidden": false
			},
			{
				"type": "improvement",
				"section": "â¬†ï¸ Feature Improvements",
				"hidden": false
			},
			{
				"type": "docs",
				"section": "ðŸ“— Docs",
				"hidden": false
			},
			{
				"type": "style",
				"section": "ðŸ–Œ Styling",
				"hidden": false
			},
			{
				"type": "refactor",
				"section": "ðŸ· Code Refactoring",
				"hidden": false
			},
			{
				"type": "perf",
				"section": "ðŸš„ Performance Improvements",
				"hidden": false
			},
			{
				"type": "test",
				"section": "â˜‘ï¸ Tests",
				"hidden": false
			},
			{
				"type": "build",
				"section": "ðŸš§ Build System",
				"hidden": false
			},
			{
				"type": "ci",
				"section": "ðŸ¤– CI",
				"hidden": false
			}
		]
	},
	"eslintConfig": {
		"env": {
			"es2021": true,
			"node": true,
			"jest": true
		},
		"extends": [
			"airbnb-base",
			"plugin:import/errors",
			"plugin:import/warnings",
			"plugin:import/typescript",
			"prettier"
		],
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"ecmaVersion": "latest",
			"sourceType": "module"
		},
		"plugins": [
			"@typescript-eslint",
			"prettier"
		],
		"rules": {
			"import/extensions": [
				"error",
				"ignorePackages",
				{
					"js": "never",
					"ts": "never"
				}
			],
			"prettier/prettier": "warn"
		},
		"globals": {
			"jest": true
		}
	},
	"dependencies": {},
	"devDependencies": {
		"@commitlint/cli": "^16.2.4",
		"@commitlint/config-conventional": "^16.2.4",
		"@types/jest": "^27.5.1",
		"@types/node": "^17.0.32",
		"@typescript-eslint/eslint-plugin": "^5.23.0",
		"@typescript-eslint/parser": "^5.23.0",
		"commitizen": "^4.2.4",
		"cz-conventional-changelog": "3.3.0",
		"eslint": "^7.32.0 || ^8.2.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-import": "^2.25.2",
		"eslint-plugin-prettier": "^4.0.0",
		"husky": "^8.0.0",
		"jest": "^28.1.0",
		"lint-staged": ">=10",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.6.2",
		"pretty-quick": "^3.1.3",
		"standard-version": "^9.3.2",
		"ts-jest": "^28.0.2",
		"typescript": "^4.6.4"
	},
	"lint-staged": {
		"*.ts": "eslint --cache --fix"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
